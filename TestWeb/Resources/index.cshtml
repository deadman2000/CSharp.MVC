<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
</head>
<body>
    @if (Session != null)
    {
        <h1>Привет @Session.Data.Login</h1>
        <h2><a href="/auth/logout">Выход</a></h2>
    }
    else
    {
        <h1><a href="/auth/login">Залогинься!</a></h1>
    }

    <p>Now is @DateTime.Now</p>
</body>
</html>