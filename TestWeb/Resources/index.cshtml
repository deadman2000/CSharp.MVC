@using TestWeb;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
</head>
<body>
    <input id="auth-password" type="password" placeholder="@Views.WEB_Auth_Password" name="pass">
    @if (Session != null)
    {
        <h1>Привет @Session.Data.Login</h1>
        <h2><a href="/auth/logout">Выход</a></h2>
    }
    else
    {
        <h1><a href="/auth/login">Залогинься!</a></h1>
    }

    <p>Now is @DateTime.Now</p>
    <img src="/logo_primary.svg">
</body>
</html>